{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "include": ["./highlightjs.d.ts"]
  }
}